{
  "name": "the-lab-academy-monorepo",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run frontend:dev",
    "build": "npm run frontend:build",
    "preview": "npm run frontend:preview",
    "test": "npm run frontend:test",
    "test:run": "npm run frontend:test:run",
    "test:coverage": "npm run frontend:test:coverage",
    "lint": "npm run frontend:lint",
    "frontend:install": "cd frontend && npm install",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:preview": "cd frontend && npm run preview",
    "frontend:test": "cd frontend && npm test",
    "frontend:test:run": "cd frontend && npm run test:run",
    "frontend:test:coverage": "cd frontend && npm run test:coverage",
    "frontend:lint": "cd frontend && npm run lint",
    "backend:install": "cd backend && poetry install",
    "backend:run": "cd backend && poetry run uvicorn src.main:app --reload",
    "backend:migrate": "cd backend && poetry run alembic upgrade head",
    "backend:test": "cd backend && poetry run pytest"
  },
  "engines": {
    "node": ">=20"
  }
}
